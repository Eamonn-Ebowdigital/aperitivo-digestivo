{% schema %}
{
  "name": "Polaroid Gallery",
  "settings": [
    {
      "type": "header",
      "content": "Polaroid Gallery Settings"
    },
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "Polaroid Gallery"
    }
  ],
  "blocks": [
    {
      "type": "polaroid_image",
      "name": "Polaroid Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption",
          "default": "Your caption here"
        },
        {
          "type": "range",
          "id": "parallax_intensity",
          "label": "Parallax Intensity",
          "min": 0,
          "max": 40,
          "step": 1,
          "default": 10,
          "unit": "px"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Polaroid Gallery",
      "category": "Image"
    }
  ]
}
{% endschema %}

<div class="polaroid-gallery-section">
  {% if section.settings.section_heading != blank %}
    <h2 class="polaroid-gallery-heading">{{ section.settings.section_heading }}</h2>
  {% endif %}
  <div class="polaroid-gallery">
    {% for block in section.blocks %}
      {% if block.type == 'polaroid_image' %}
        <div class="polaroid-image-wrapper" data-parallax-intensity="{{ block.settings.parallax_intensity }}" style="--parallax-intensity: {{ block.settings.parallax_intensity | default: 10 }}px;">
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | img_url: '800x' }}" alt="Polaroid image" class="polaroid-image" loading="lazy">
          {% endif %}
          {% if block.settings.caption != blank %}
            <div class="polaroid-caption">{{ block.settings.caption }}</div>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<style>
.polaroid-gallery-section {
  padding: 40px 0;
}
.polaroid-gallery-heading {
  text-align: center;
  margin-bottom: 32px;
  font-size: 2rem;
  font-family: inherit;
}
.polaroid-gallery {
  display: flex;
  flex-wrap: wrap;
  gap: 32px;
  justify-content: center;
}
.polaroid-image-wrapper {
  background: #fff;
  border: 8px solid #fff;
  box-shadow: 0 8px 24px rgba(0,0,0,0.18), 0 1.5px 4px rgba(0,0,0,0.10);
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 220px;
  margin-bottom: 16px;
  transition: box-shadow 0.2s;
  will-change: transform;
  position: relative;
}
.polaroid-image {
  width: 200px;
  height: auto;
  display: block;
  border-radius: 4px;
}
.polaroid-caption {
  font-family: 'Permanent Marker', cursive, sans-serif;
  font-size: 1.1rem;
  margin-top: 12px;
  color: #222;
  text-align: center;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const polaroids = document.querySelectorAll('.polaroid-image-wrapper');
  function handleParallax() {
    const scrollY = window.scrollY || window.pageYOffset;
    polaroids.forEach(function(el, idx) {
      const intensity = parseInt(el.dataset.parallaxIntensity || 10, 10);
      const rect = el.getBoundingClientRect();
      const offset = (rect.top + rect.height/2 - window.innerHeight/2) / window.innerHeight;
      el.style.transform = `translateY(${offset * intensity}px)`;
    });
  }
  window.addEventListener('scroll', handleParallax);
  handleParallax();
});
</script> 