{%- comment -%}
  Detailed Product Builder
  Minimal stub section so the template can render in the editor.
  Expand with blocks/settings as needed.
{%- endcomment -%}

<section class="section section--detailed-product-builder">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="h2">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.content != blank %}
      <div class="rte">{{ section.settings.content }}</div>
    {% endif %}

    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'text' %}
          <p>{{ block.settings.text }}</p>
        {% when 'subheading' %}
          <h3 class="h3">{{ block.settings.subheading }}</h3>
        {% when 'spacer' %}
          <div style="height: {{ block.settings.height }}px"></div>
        {% when 'richtext' %}
          <div class="rte">{{ block.settings.richtext }}</div>
        {% when 'image' %}
          {% if block.settings.image != blank %}
            <div class="builder-image" style="text-align: {{ block.settings.alignment }};">
              <img
                src="{{ block.settings.image | image_url: width: block.settings.max_width }}"
                alt="{{ block.settings.alt | escape }}"
                loading="lazy"
                width="{{ block.settings.image.width }}"
                height="{{ block.settings.image.height }}"
                style="max-width: {{ block.settings.max_width }}px; width: 100%; height: auto;"
              >
            </div>
          {% endif %}
        {% when 'button' %}
          {% if block.settings.link != blank and block.settings.label != blank %}
            <div class="builder-button" style="text-align: {{ block.settings.alignment }};">
              <a href="{{ block.settings.link }}" class="button button--primary">{{ block.settings.label }}</a>
            </div>
          {% endif %}
        {% when 'divider' %}
          <hr class="builder-divider">
        {% when 'liquid' %}
          {{ block.settings.custom_liquid }}
        {% when 'product' %}
          {% if block.settings.product != blank %}
            <div class="builder-product">
              {% render 'card-product',
                card_product: block.settings.product,
                section_id: section.id,
                show_vendor: block.settings.show_vendor,
                quick_add: 'standard'
              %}
            </div>
          {% endif %}
        {% when 'collection' %}
          {% if block.settings.collection != blank %}
            {%- assign cols = block.settings.columns | default: 4 -%}
            <div class="builder-collection grid grid--2-col-tablet grid--{{ cols }}-col-desktop">
              {% for prod in block.settings.collection.products limit: block.settings.products_to_show %}
                <div class="grid__item">
                  {% render 'card-product',
                    card_product: prod,
                    section_id: section.id,
                    show_vendor: block.settings.show_vendor_collection,
                    quick_add: 'standard'
                  %}
                </div>
              {% endfor %}
            </div>
          {% endif %}
        {% when 'video' %}
          {% if block.settings.video_url != blank %}
            <div class="builder-video" style="aspect-ratio: 16/9;">
              {% if block.settings.video_url.type == 'youtube' %}
                <iframe
                  width="560"
                  height="315"
                  src="https://www.youtube.com/embed/{{ block.settings.video_url.id }}"
                  title="YouTube video"
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                  allowfullscreen
                  loading="lazy"
                ></iframe>
              {% elsif block.settings.video_url.type == 'vimeo' %}
                <iframe
                  src="https://player.vimeo.com/video/{{ block.settings.video_url.id }}"
                  width="640"
                  height="360"
                  frameborder="0"
                  allow="autoplay; fullscreen; picture-in-picture"
                  allowfullscreen
                  loading="lazy"
                ></iframe>
              {% endif %}
            </div>
          {% endif %}
        {% when 'editorial_product_feature' %}
          {%- assign mo = block.settings.metaobject -%}
          {%- if mo == blank and page and page.metafields.content and page.metafields.content.editorial_feature -%}
            {%- assign mo = page.metafields.content.editorial_feature -%}
          {%- endif -%}

          {%- comment -%}
            Optional per-block style variables (safe defaults if you don't add schema fields):
            heading_tag: h2, heading_size: 28, heading_weight: 700, heading_colour: #000, band_colour: #ffd200
          {%- endcomment -%}
          {%- assign Tag = block.settings.heading_tag | default: 'h2' -%}
          {%- assign heading_size = block.settings.heading_size | default: 28 -%}
          {%- assign heading_weight = block.settings.heading_weight | default: 700 -%}
          {%- assign heading_colour = block.settings.heading_colour | default: '#000000' -%}
          {%- assign band_colour = block.settings.band_colour | default: mo.intro_bg_colour | default: '#ffd200' -%}

          {% if mo %}
            <div
              class="editorial-feature"
              style="--band-col: {{ band_colour }}; --title-size: {{ heading_size }}px; --title-weight: {{ heading_weight }}; --title-col: {{ heading_colour }};"
            >
              <!-- Top row: hero (left) + full-bleed band with intro (right) -->
              <div class="feature-row">
                <div class="feature-hero">
                  {% if mo.hero_image %}
                    <img src="{{ mo.hero_image | image_url: width: 1600 }}" alt="{{ mo.title | escape }}">
                  {% endif %}
                </div>

                <div class="feature-intro">
                  <div class="intro-inner">
                    {% if mo.intro_text %}{{ mo.intro_text }}{% endif %}
                    <{{ Tag }} class="feature-title">{{ mo.title }}</{{ Tag }}>
                    {% if mo.price %}
                      <p class="feature-price">{{ mo.price }}</p>
                    {% endif %}
                  </div>
                </div>
              </div>

              <!-- Supporting images (no captions per your note) -->
              <div class="feature-supporting">
                {% if mo.secondary_image_1 %}
                  <figure class="small left">
                    <img src="{{ mo.secondary_image_1 | image_url: width: 900 }}" alt="">
                  </figure>
                {% endif %}
                {% if mo.secondary_image_2 %}
                  <figure class="small right">
                    <img src="{{ mo.secondary_image_2 | image_url: width: 900 }}" alt="">
                  </figure>
                {% endif %}
              </div>

              <!-- Long description; optional tertiary image on right -->
              <div class="feature-description-row">
                <div class="feature-description">
                  {% if mo.description %}{{ mo.description }}{% endif %}
                </div>
                {% if mo.tertiary_image %}
                  <figure class="feature-tertiary">
                    <img src="{{ mo.tertiary_image | image_url: width: 1200 }}" alt="">
                  </figure>
                {% endif %}
              </div>
            </div>
          {% endif %}
      {% endcase %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Detailed product builder",
  "tag": "section",
  "class": "section",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading" },
    { "type": "richtext", "id": "content", "label": "Content" }
  ],
  "blocks": [
    {
      "type": "editorial_product_feature",
      "name": "Editorial product feature",
      "settings": [
        {
          "type": "metaobject",
          "id": "metaobject",
          "label": "Editorial product metaobject",
          "metaobject_type": "editorial_product_feature"
        },
        {
          "type": "select",
          "id": "heading_tag",
          "label": "Heading tag",
          "default": "h2",
          "options": [
            { "value": "h1", "label": "H1" },
            { "value": "h2", "label": "H2" },
            { "value": "h3", "label": "H3" }
          ]
        },
        {
          "type": "range",
          "id": "heading_size",
          "label": "Heading size (px)",
          "min": 20,
          "max": 64,
          "step": 1,
          "default": 28
        },
        {
          "type": "range",
          "id": "heading_weight",
          "label": "Heading weight",
          "min": 300,
          "max": 900,
          "step": 50,
          "default": 700
        },
        { "type": "color", "id": "heading_colour", "label": "Heading colour", "default": "#000000" },
        { "type": "color", "id": "band_colour", "label": "Band colour", "default": "#ffd200" }
      ]
    }
  ],
  "presets": [{ "name": "Detailed product builder" }]
}
{% endschema %}

{% stylesheet %}
  .section--detailed-product-builder {
    padding: 2rem 0;
  }
  .builder-divider {
    margin: 2rem 0;
    opacity: 0.25;
  }
  .builder-button .button {
    margin-top: 0.5rem;
  }
  .builder-collection .grid {
    row-gap: 2rem;
  }

  .editorial-feature {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  .feature-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    align-items: stretch;
  }
  @media (max-width: 900px) {
    .feature-row {
      grid-template-columns: 1fr;
    }
  }

  .feature-hero img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .feature-intro {
    position: relative;
    display: flex;
    align-items: center;
  }
  .feature-intro::before {
    content: '';
    position: absolute;
    inset: 0;
    left: 50%;
    width: 100vw; /* full-bleed band */
    transform: translateX(-50%);
    background: var(--band-col, #ffd200);
    z-index: 0;
  }
  .intro-inner {
    position: relative;
    z-index: 1;
    padding: 2.25rem 2rem;
    max-width: 56ch;
    color: #000;
  }
  .feature-title {
    font-size: var(--title-size, 28px);
    font-weight: var(--title-weight, 700);
    color: var(--title-col, #000);
    margin-top: 0.75rem;
    line-height: 1.15;
  }
  .feature-price {
    margin-top: 0.25rem;
  }

  .feature-supporting {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 1rem;
    align-items: start;
  }
  .feature-supporting .small {
    margin: 0;
  }
  .feature-supporting .small.right {
    justify-self: end;
  }
  .feature-supporting img {
    display: block;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
  }

  .feature-description-row {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 2rem;
    align-items: start;
  }
  @media (max-width: 1000px) {
    .feature-description-row {
      grid-template-columns: 1fr;
    }
  }
  .feature-description {
    max-width: 70ch;
  }
  .feature-tertiary {
    margin: 0;
  }
  .feature-tertiary img {
    width: 100%;
    height: auto;
    display: block;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
  }
{% endstylesheet %}
