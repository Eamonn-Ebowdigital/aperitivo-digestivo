{%- comment -%}
  Detailed Product Builder
  Minimal stub section so the template can render in the editor.
  Expand with blocks/settings as needed.
{%- endcomment -%}

<section class="section section--detailed-product-builder">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="h2">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.content != blank %}
      <div class="rte">{{ section.settings.content }}</div>
    {% endif %}

    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'text' %}
          <p>{{ block.settings.text }}</p>
        {% when 'subheading' %}
          <h3 class="h3">{{ block.settings.subheading }}</h3>
        {% when 'spacer' %}
          <div style="height: {{ block.settings.height }}px"></div>
        {% when 'richtext' %}
          <div class="rte">{{ block.settings.richtext }}</div>
        {% when 'image' %}
          {% if block.settings.image != blank %}
            <div class="builder-image" style="text-align: {{ block.settings.alignment }};">
              <img
                src="{{ block.settings.image | image_url: width: block.settings.max_width }}"
                alt="{{ block.settings.alt | escape }}"
                loading="lazy"
                width="{{ block.settings.image.width }}"
                height="{{ block.settings.image.height }}"
                style="max-width: {{ block.settings.max_width }}px; width: 100%; height: auto;"
              >
            </div>
          {% endif %}
        {% when 'button' %}
          {% if block.settings.link != blank and block.settings.label != blank %}
            <div class="builder-button" style="text-align: {{ block.settings.alignment }};">
              <a href="{{ block.settings.link }}" class="button button--primary">{{ block.settings.label }}</a>
            </div>
          {% endif %}
        {% when 'divider' %}
          <hr class="builder-divider">
        {% when 'liquid' %}
          {{ block.settings.custom_liquid }}
        {% when 'product' %}
          {% if block.settings.product != blank %}
            <div class="builder-product">
              {% render 'card-product',
                card_product: block.settings.product,
                section_id: section.id,
                show_vendor: block.settings.show_vendor,
                quick_add: 'standard'
              %}
            </div>
          {% endif %}
        {% when 'collection' %}
          {% if block.settings.collection != blank %}
            {%- assign cols = block.settings.columns | default: 4 -%}
            <div class="builder-collection grid grid--2-col-tablet grid--{{ cols }}-col-desktop">
              {% for prod in block.settings.collection.products limit: block.settings.products_to_show %}
                <div class="grid__item">
                  {% render 'card-product',
                    card_product: prod,
                    section_id: section.id,
                    show_vendor: block.settings.show_vendor_collection,
                    quick_add: 'standard'
                  %}
                </div>
              {% endfor %}
            </div>
          {% endif %}
        {% when 'video' %}
          {% if block.settings.video_url != blank %}
            <div class="builder-video" style="aspect-ratio: 16/9;">
              {% if block.settings.video_url.type == 'youtube' %}
                <iframe
                  width="560"
                  height="315"
                  src="https://www.youtube.com/embed/{{ block.settings.video_url.id }}"
                  title="YouTube video"
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                  allowfullscreen
                  loading="lazy"
                ></iframe>
              {% elsif block.settings.video_url.type == 'vimeo' %}
                <iframe
                  src="https://player.vimeo.com/video/{{ block.settings.video_url.id }}"
                  width="640"
                  height="360"
                  frameborder="0"
                  allow="autoplay; fullscreen; picture-in-picture"
                  allowfullscreen
                  loading="lazy"
                ></iframe>
              {% endif %}
            </div>
          {% endif %}
        {% when 'editorial_product_feature' %}
          {%- assign mo = block.settings.metaobject -%}
          {%- if mo == blank and page and page.metafields.content and page.metafields.content.editorial_feature -%}
            {%- assign mo = page.metafields.content.editorial_feature -%}
          {%- endif -%}

          {%- comment -%}
            Robust hero image resolution: accept multiple possible field names.
          {%- endcomment -%}
          {%- assign hero_image_ref = mo.hero_image
            | default: mo.hero
            | default: mo.image
            | default: mo.feature_image
          -%}
          {%- assign secondary_image_ref = mo.secondary_image_1
            | default: mo.secondary_1
            | default: mo.supporting_image_1
          -%}
          {%- assign tertiary_image_ref = mo.tertiary_image
            | default: mo.secondary_image_2
            | default: mo.supporting_image_large
          -%}

          {%- assign heading_tag = block.settings.heading_tag | default: 'h2' -%}
          {%- assign heading_size = block.settings.heading_size | default: 28 -%}
          {%- assign heading_weight = block.settings.heading_weight | default: 700 -%}
          {%- assign heading_colour = block.settings.heading_colour | default: '#000000' -%}
          {%- assign band_colour = block.settings.band_colour | default: mo.intro_bg_colour | default: '#ffd200' -%}

          {% if mo %}
            <div
              class="editorial-feature"
              style="--band-col: {{ band_colour }}; --title-size: {{ heading_size }}px; --title-weight: {{ heading_weight }}; --title-col: {{ heading_colour }};"
            >
              <div class="feature-canvas">
                <!-- Yellow band -->
                <div class="feature-band" aria-hidden="true"></div>

                <!-- Hero Polaroid -->
                {% if hero_image_ref %}
                  <figure class="polaroid polaroid--hero">
                    <div class="polaroid__frame">
                      <img
                        src="{{ hero_image_ref | image_url: width: 1200 }}"
                        alt="{{ mo.title | escape }}"
                        loading="lazy"
                        width="{{ hero_image_ref.width | default: 1200 }}"
                        height="{{ hero_image_ref.height | default: 1600 }}"
                      >
                    </div>
                    {% if mo.hero_caption or block.settings.hero_caption_override %}
                      <figcaption class="polaroid__caption">
                        {{ block.settings.hero_caption_override | default: mo.hero_caption }}
                      </figcaption>
                    {% endif %}
                  </figure>
                {% endif %}

                <!-- Intro copy (sits over band) -->
                <div class="feature-intro-copy">
                  {% if mo.intro_text %}
                    <div class="intro-text rte">{{ mo.intro_text }}</div>
                  {% endif %}
                  <{{ heading_tag }} class="feature-title">{{ mo.title }}</{{ heading_tag }}>
                  {% if mo.price %}
                    <p class="feature-price">{{ mo.price }}</p>
                  {% endif %}
                </div>

                <!-- Small polaroid overlapping right of band -->
                {% if secondary_image_ref %}
                  <figure class="polaroid polaroid--small">
                    <div class="polaroid__frame">
                      <img
                        src="{{ secondary_image_ref | image_url: width: 600 }}"
                        alt=""
                        loading="lazy"
                        width="{{ secondary_image_ref.width | default: 600 }}"
                        height="{{ secondary_image_ref.height | default: 800 }}"
                      >
                    </div>
                    {% if mo.secondary_caption_1 %}
                      <figcaption class="polaroid__caption">{{ mo.secondary_caption_1 }}</figcaption>
                    {% endif %}
                  </figure>
                {% endif %}

                <!-- Large lower-right polaroid -->
                {% if tertiary_image_ref %}
                  <figure class="polaroid polaroid--tertiary">
                    <div class="polaroid__frame">
                      <img
                        src="{{ tertiary_image_ref | image_url: width: 1000 }}"
                        alt=""
                        loading="lazy"
                        width="{{ tertiary_image_ref.width | default: 1000 }}"
                        height="{{ tertiary_image_ref.height | default: 1400 }}"
                      >
                    </div>
                    {% if mo.tertiary_caption %}
                      <figcaption class="polaroid__caption">{{ mo.tertiary_caption }}</figcaption>
                    {% endif %}
                  </figure>
                {% endif %}

                <!-- Long description (left of lower large polaroid) -->
                {% if mo.description %}
                  <div class="feature-description rte">{{ mo.description }}</div>
                {% endif %}
              </div>
            </div>
          {% endif %}
      {% endcase %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Detailed product builder",
  "tag": "section",
  "class": "section",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading" },
    { "type": "richtext", "id": "content", "label": "Content" }
  ],
  "blocks": [
    {
      "type": "editorial_product_feature",
      "name": "Editorial product feature",
      "settings": [
        {
          "type": "metaobject",
          "id": "metaobject",
          "label": "Editorial product metaobject",
          "metaobject_type": "editorial_product_feature"
        },
        { "type": "text", "id": "hero_caption_override", "label": "Hero caption override" },
        {
          "type": "select",
          "id": "heading_tag",
          "label": "Heading tag",
          "default": "h2",
          "options": [
            { "value": "h1", "label": "H1" },
            { "value": "h2", "label": "H2" },
            { "value": "h3", "label": "H3" }
          ]
        },
        {
          "type": "range",
          "id": "heading_size",
          "label": "Heading size (px)",
          "min": 20,
          "max": 64,
          "step": 1,
          "default": 28
        },
        {
          "type": "range",
          "id": "heading_weight",
          "label": "Heading weight",
          "min": 300,
          "max": 900,
          "step": 50,
          "default": 700
        },
        { "type": "color", "id": "heading_colour", "label": "Heading colour", "default": "#000000" },
        { "type": "color", "id": "band_colour", "label": "Band colour", "default": "#ffd200" }
      ]
    }
  ],
  "presets": [{ "name": "Detailed product builder" }]
}
{% endschema %}

{% stylesheet %}
  .section--detailed-product-builder {
    padding: 2rem 0;
  }
  .builder-divider {
    margin: 2rem 0;
    opacity: 0.25;
  }
  .builder-button .button {
    margin-top: 0.5rem;
  }
  .builder-collection .grid {
    row-gap: 2rem;
  }

  /* Editorial feature redesigned */
  .editorial-feature {
    --polaroid-bg: #f2f2f2;
    --polaroid-pad: 0.85rem;
    --scribble-font: var(--font-heading-family);
    position: relative;
  }
  .feature-canvas {
    position: relative;
    width: 100%;
    min-height: 400px;
    background: #000;
    padding: 6rem 0 5rem;
  }
  .feature-band {
    position: absolute;
    top: 5rem;
    left: 50%;
    transform: translateX(-50%);
    width: 100vw;
    height: 230px;
    background: var(--band-col, #ffd200);
  }

  .polaroid {
    position: absolute;
    display: flex;
    flex-direction: column;
    background: var(--polaroid-bg);
    box-shadow: 0 12px 26px -4px rgba(0, 0, 0, 0.35);
  }
  .polaroid__frame {
    padding: var(--polaroid-pad);
  }
  .polaroid__frame img {
    display: block;
    width: 100%;
    height: auto;
    object-fit: cover;
  }
  .polaroid__caption {
    font-family: var(--scribble-font);
    font-size: clamp(12px, 1.1vw, 16px);
    padding: 0 0.85rem 0.9rem;
    line-height: 1.1;
  }

  .polaroid--hero {
    top: 2.5rem;
    left: min(8vw, 7rem);
    width: clamp(220px, 25vw, 270px);
  }
  .polaroid--small {
    top: 11rem;
    right: min(9vw, 8rem);
    width: clamp(170px, 18vw, 200px);
  }
  .polaroid--tertiary {
    bottom: 1.5rem;
    right: min(6vw, 6rem);
    width: clamp(260px, 30vw, 360px);
  }

  .feature-intro-copy {
    position: absolute;
    top: 6.2rem;
    left: 50%;
    transform: translateX(-50%);
    max-width: 700px;
    width: 60%;
    color: #000;
    font-family: var(--font-body-family);
  }
  .feature-intro-copy .intro-text {
    font-size: clamp(12px, 0.9vw, 15px);
    line-height: 1.55;
  }
  .feature-title {
    font-family: var(--font-heading-family);
    font-size: var(--title-size, 28px);
    font-weight: var(--title-weight, 700);
    color: var(--title-col, #000);
    margin: 1.25rem 0 0.2rem;
    line-height: 1.15;
  }
  .feature-price {
    font-size: clamp(11px, 0.8vw, 14px);
    margin: 0;
  }

  .feature-description {
    position: absolute;
    bottom: 10.5rem;
    left: min(8vw, 7rem);
    max-width: clamp(260px, 28vw, 380px);
    color: #fff;
    font-size: clamp(11px, 0.85vw, 14px);
    line-height: 1.55;
  }
  @media (max-width: 1100px) {
    .feature-canvas {
      padding-bottom: 8rem;
    }
    .feature-description {
      position: static;
      max-width: 60ch;
      margin: 2rem auto 0;
    }
    .polaroid--tertiary {
      position: static;
      margin: 2.5rem auto 0;
    }
    .polaroid--small {
      top: auto;
      right: auto;
      position: static;
      margin: 2rem auto 0;
    }
    .polaroid--hero {
      position: static;
      left: auto;
      top: auto;
    }
    .feature-intro-copy {
      position: static;
      transform: none;
      width: 100%;
      margin: 2rem auto 0;
    }
    .feature-band {
      position: static;
      width: 100%;
      height: auto;
      transform: none;
      padding: 3rem 0;
    }
  }
{% endstylesheet %}
