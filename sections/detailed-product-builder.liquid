{%- comment -%}
  Detailed Product Builder
  Minimal stub section so the template can render in the editor.
  Expand with blocks/settings as needed.
{%- endcomment -%}

<section class="section section--detailed-product-builder">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="h2">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.content != blank %}
      <div class="rte">{{ section.settings.content }}</div>
    {% endif %}

    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'text' %}
          <p>{{ block.settings.text }}</p>
        {% when 'subheading' %}
          <h3 class="h3">{{ block.settings.subheading }}</h3>
        {% when 'spacer' %}
          <div style="height: {{ block.settings.height }}px"></div>
        {% when 'richtext' %}
          <div class="rte">{{ block.settings.richtext }}</div>
        {% when 'image' %}
          {% if block.settings.image != blank %}
            <div class="builder-image" style="text-align: {{ block.settings.alignment }};">
              <img
                src="{{ block.settings.image | image_url: width: block.settings.max_width }}"
                alt="{{ block.settings.alt | escape }}"
                loading="lazy"
                width="{{ block.settings.image.width }}"
                height="{{ block.settings.image.height }}"
                style="max-width: {{ block.settings.max_width }}px; width: 100%; height: auto;"
              >
            </div>
          {% endif %}
        {% when 'button' %}
          {% if block.settings.link != blank and block.settings.label != blank %}
            <div class="builder-button" style="text-align: {{ block.settings.alignment }};">
              <a href="{{ block.settings.link }}" class="button button--primary">{{ block.settings.label }}</a>
            </div>
          {% endif %}
        {% when 'divider' %}
          <hr class="builder-divider">
        {% when 'liquid' %}
          {{ block.settings.custom_liquid }}
        {% when 'product' %}
          {% if block.settings.product != blank %}
            <div class="builder-product">
              {% render 'card-product',
                card_product: block.settings.product,
                section_id: section.id,
                show_vendor: block.settings.show_vendor,
                quick_add: 'standard'
              %}
            </div>
          {% endif %}
        {% when 'collection' %}
          {% if block.settings.collection != blank %}
            {%- assign cols = block.settings.columns | default: 4 -%}
            <div class="builder-collection grid grid--2-col-tablet grid--{{ cols }}-col-desktop">
              {% for prod in block.settings.collection.products limit: block.settings.products_to_show %}
                <div class="grid__item">
                  {% render 'card-product',
                    card_product: prod,
                    section_id: section.id,
                    show_vendor: block.settings.show_vendor_collection,
                    quick_add: 'standard'
                  %}
                </div>
              {% endfor %}
            </div>
          {% endif %}
        {% when 'video' %}
          {% if block.settings.video_url != blank %}
            <div class="builder-video" style="aspect-ratio: 16/9;">
              {% if block.settings.video_url.type == 'youtube' %}
                <iframe
                  width="560"
                  height="315"
                  src="https://www.youtube.com/embed/{{ block.settings.video_url.id }}"
                  title="YouTube video"
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                  allowfullscreen
                  loading="lazy"
                ></iframe>
              {% elsif block.settings.video_url.type == 'vimeo' %}
                <iframe
                  src="https://player.vimeo.com/video/{{ block.settings.video_url.id }}"
                  width="640"
                  height="360"
                  frameborder="0"
                  allow="autoplay; fullscreen; picture-in-picture"
                  allowfullscreen
                  loading="lazy"
                ></iframe>
              {% endif %}
            </div>
          {% endif %}
        {% when 'editorial_product_feature' %}
          {% assign mo = block.settings.metaobject %}
          {% if mo != blank %}
            <div class="editorial-feature">
              <div class="feature-row">
                <div class="feature-hero">
                  <img src="{{ mo.hero_image | img_url: 'master' }}" alt="{{ mo.title | escape }}">
                </div>
                <div class="feature-intro" style="background-color: {{ mo.intro_bg_colour }}">
                  <div class="feature-intro-text">
                    <p class="intro-copy">{{ mo.intro_text }}</p>
                    <h2>{{ mo.title }}</h2>
                    <p class="price">{{ mo.price }}</p>
                  </div>
                </div>
              </div>

              <div class="feature-gallery">
                {% if mo.secondary_image_1 != blank %}
                  <figure>
                    <img
                      src="{{ mo.secondary_image_1 | img_url: 'master' }}"
                    >
                  </figure>
                {% endif %}

                {% if mo.secondary_image_2 != blank %}
                  <figure>
                    <img
                      src="{{ mo.secondary_image_2 | img_url: 'master' }}"
                    >
                  </figure>
                {% endif %}
              </div>

              {% if mo.description != blank %}
                <div class="feature-description">
                  {{ mo.description }}
                </div>
              {% endif %}
            </div>
          {% endif -%}
          }
      {% endcase %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Detailed product builder",
  "tag": "section",
  "class": "section",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading" },
    { "type": "richtext", "id": "content", "label": "Content" }
  ],
  "blocks": [
    {
      "type": "editorial_product_feature",
      "name": "Editorial product feature",
      "settings": [
        {
          "type": "metaobject",
          "id": "metaobject",
          "label": "Editorial product metaobject",
          "metaobject_type": "editorial_product_feature"
        }
      ]
    }
  ],
  "presets": [{ "name": "Detailed product builder" }]
}
{% endschema %}

{% stylesheet %}
  .section--detailed-product-builder {
    padding: 2rem 0;
  }
  .builder-divider {
    margin: 2rem 0;
    opacity: 0.25;
  }
  .builder-button .button {
    margin-top: 0.5rem;
  }
  .builder-collection .grid {
    row-gap: 2rem;
  }

  .editorial-feature {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    font-family: 'Times New Roman', serif;
  }

  .feature-row {
    display: flex;
    flex-wrap: wrap;
  }

  .feature-hero img {
    width: 100%;
    height: auto;
    display: block;
  }

  .feature-hero {
    flex: 1 1 50%;
    min-width: 300px;
  }

  .feature-intro {
    flex: 1 1 50%;
    background-color: #ffd200; /* matches the yellow in your screenshot */
    padding: 2rem;
    display: flex;
    align-items: center;
  }

  .feature-intro .intro-inner {
    color: #000;
    font-size: 1rem;
    line-height: 1.5;
  }

  .feature-intro .feature-title {
    font-weight: bold;
    margin-top: 1rem;
  }

  .feature-intro .feature-price {
    font-weight: normal;
    margin-top: 0.5rem;
  }

  .feature-supporting {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: flex-end;
  }

  .feature-supporting figure {
    flex: 0 1 auto;
    margin: 0;
    text-align: center;
  }

  .feature-supporting figcaption {
    font-style: italic;
    font-size: 0.9rem;
    margin-top: 0.25rem;
  }

  .feature-description-row {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .feature-description {
    flex: 1 1 60%;
    font-size: 1rem;
    line-height: 1.5;
  }

  .feature-tertiary {
    flex: 1 1 35%;
    margin: 0;
    text-align: center;
  }

  .feature-tertiary figcaption {
    font-style: italic;
    font-size: 0.9rem;
    margin-top: 0.25rem;
  }
{% endstylesheet %}
